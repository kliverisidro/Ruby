<div class="container-fuild">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="jumbotron space-a">
                    <fiedset>
                        <h1 class="text-center space-title form-title"><%="#{title} Articulo"%></h1>
                        <% if @article.errors.any? %>
                             <div id="error_explanation">
                                <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
                                <ul>
                                <% @article.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                                <% end %>
                                </ul>
                             </div>
                        <% end %>
                        <%= form_with(model: @article, local: true) do |form|%>
                            <div class="form-group row">
                                <%= form.label "Titulo", class:"offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
                                <%= form.text_field :title, class:"col-md-4 form-control" %>
                            </div>
                            <div class="form-group row">
                                <%= form.label "Cuerpo", class:"offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
                                <%= form.text_area :body, class:"col-md-4 form-control" %>
                            </div>
                            <% Category.all.each do |category|%>
                                <%= check_box_tag "categories[]", category.id %> <%=category.name %><br>
                            <%end%>
                            <div class="form-group row">
                                <div class="container text-center">
                                    <%= form.submit "Aceptar", class:"btn btn-info col-md-3" %>
                                    <%= link_to "Atras", articles_path, class:"btn btn-info col-md-3" %>
                                </div>
                            </div>
                        <%end%>
                    </fiedset>
            </div>
        </div>
    </div>
</div>
